{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build game engine",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "bin/main.exe",
                "source/main.c"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C/C++ build",
            "command": "C:/MinGW/bin/gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}